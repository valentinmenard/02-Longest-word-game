<div id="grid">
  <% @grid.each do |letter| %>
    <%=letter%>
  <%end%>
</div>
<% string = @grid.join(",") %>



<form action="/longest_game/score" id="form" method="post">
  <label for="word">Enter your word</label>
  <input type="text" id="word" name="word" place-holder="Type your word here">
  <input type="hidden" name="start_time" value=<%=Time.now%>>
  <input type="hidden" name="grid" value=<%=string%>>

  <input type="submit">
</form>
